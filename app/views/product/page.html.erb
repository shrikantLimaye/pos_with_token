<% if @products.blank? %>
<p>There are not any products currently in the system.</p>
<% else %>
<table class="table table-bordered border-primary">
   <thead>
      <tr>
         <th scope="col"> Products </th>
         <th scope="col"> Price </th>
         <th scope="col"> Edit </th>
         <th scope="col"> Delete </th>
      </tr>
   </thead>
   <tbody>
   <% @products.each do |product| %>
      <tr>
         
         <td> <%= product.title%> </td>
         <td> <%= number_to_indian_currency(product.price) %> </td>
         <td><%= link_to 'Edit', {:action => 'edit', :id => product.id} %></td>
         <td><%= link_to "Delete", {:action => 'delete', :id => product.id},
      :confirm => "Are you sure you want to delete this item?" %></td>
         
      </tr>
      <% end %>
   </tbody>
</table>
<% end %>
<p><%= link_to "Add new Product", {:action => 'new' }, class: 'btn btn-danger' %></p>